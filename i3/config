# i3 config file (v4) - Enhanced Configuration
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Mod key (Mod1 = Alt, Mod4 = Windows/Super key)
set $mod Mod4

# Font for window titles and bar
font pango:DejaVu Sans Mono 10

# Disable focus follows mouse
focus_follows_mouse no

# Define workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# ============================================
# AUTOSTART APPLICATIONS
# ============================================

# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3

# Set screen timeout to 1 hour
exec --no-startup-id xset s 3600 3600
exec --no-startup-id xset dpms 3600 3600 3600

# Lock screen on suspend
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Network manager applet
exec --no-startup-id nm-applet

# Start compositor for transparency/effects (install with: pacman -S picom)
exec --no-startup-id picom -b --config ~/.config/picom.conf

# Set wallpaper (install nitrogen: pacman -S nitrogen)
exec --no-startup-id nitrogen --restore

# Notification daemon (install dunst: pacman -S dunst)
exec --no-startup-id dunst

# Authentication agent
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Autotiling
exec_always --no-startup-id autotiling

# ============================================
# MULTIMEDIA KEYS & VOLUME CONTROLS
# ============================================

# Volume controls (5% increments instead of 10%)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness controls (install brightnessctl: pacman -S brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

# Screenshot tools (install scrot: pacman -S scrot)
bindsym Print exec --no-startup-id scrot '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/Pictures/'
bindsym $mod+Print exec --no-startup-id scrot -s '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/Pictures/'

# ============================================
# KEY BINDINGS
# ============================================

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Move tiling windows via drag & drop
tiling_drag modifier titlebar

# Start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# Kill focused window
bindsym $mod+Shift+q kill

# Start program launcher (dmenu)
# bindsym $mod+d exec --no-startup-id dmenu_run -nb '#2f343f' -nf '#ffffff' -sb '#5294e2' -sf '#ffffff' -fn 'DejaVu Sans Mono-12' -b

# Alternative: rofi launcher 
bindsym $mod+d exec --no-startup-id rofi -show drun -config ~/.config/rofi/config.rasi

# Change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# Alternatively, use cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# Alternatively, use cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split in horizontal orientation
bindsym $mod+h split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move workspace to different monitor
bindsym $mod+Ctrl+Shift+Left move workspace to output left
bindsym $mod+Ctrl+Shift+Right move workspace to output right

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session)
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Lock screen
bindsym $mod+Ctrl+l exec --no-startup-id i3lock -c 000000

# Resize window mode
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt

    # Same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # Back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# ============================================
# WINDOW APPEARANCE
# ============================================

# Window borders
default_border pixel 2
default_floating_border pixel 2

# Hide borders when only one window
# hide_edge_borders smart

# Gaps (requires i3-gaps, install with: pacman -S i3-gaps)
gaps inner 8
gaps outer 4

# Only enable gaps on a workspace when there is at least one container
smart_gaps on

# Window colors (Dracula theme inspired with reduced border opacity)
# class                 border    bground text    indicator child_border
client.focused          #00FF41CC #00FF41 #F8F8F2 #00FF41   #00FF41CC
client.focused_inactive #44475ACC #44475A #F8F8F2 #44475A   #44475ACC
client.unfocused        #282A36CC #282A36 #BFBFBF #282A36   #282A36CC
client.urgent           #44475ACC #FF5555 #F8F8F2 #FF5555   #FF5555CC
client.placeholder      #282A36CC #0C0C0C #F8F8F2 #000000   #0C0C0CCC

# ============================================
# FLOATING WINDOWS
# ============================================

# Set floating for specific windows
for_window [class="Pavucontrol"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Arandr"] floating enable
for_window [class="Galculator"] floating enable
for_window [class="feh"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences"] floating enable

# Force borders for Ghostty terminal
for_window [class="ghostty"] border pixel 1
for_window [class="com.mitchellh.ghostty"] border pixel 1

# ============================================
# WORKSPACE ASSIGNMENTS
# ============================================

# Assign applications to specific workspaces
assign [class="firefox"] $ws2
assign [class="code"] $ws3
assign [class="discord"] $ws9
assign [class="spotify"] $ws10

# ============================================
# SCRATCHPAD
# ============================================

# Move window to scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show scratchpad window
bindsym $mod+minus scratchpad show

# Make the currently focused window a scratchpad
# bindsym $mod+Shift+s move scratchpad

# ============================================
# GAP CONTROLS
# ============================================

# Increase/decrease gaps
bindsym $mod+Ctrl+plus gaps inner current plus 5
bindsym $mod+Ctrl+minus gaps inner current minus 5
bindsym $mod+Ctrl+Shift+plus gaps outer current plus 5
bindsym $mod+Ctrl+Shift+minus gaps outer current minus 5

# Reset gaps to default
bindsym $mod+Ctrl+g gaps inner current set 8; gaps outer current set 4

# Remove all gaps
bindsym $mod+Ctrl+Shift+g gaps inner current set 0; gaps outer current set 0

# ============================================
# ADDITIONAL SHORTCUTS
# ============================================

# File manager (install thunar: pacman -S thunar)
# bindsym $mod+Shift+f exec --no-startup-id thunar

# Web browser
bindsym $mod+Shift+w exec --no-startup-id firefox


# System monitor
bindsym $mod+Shift+t exec --no-startup-id i3-sensible-terminal -e gtop

# ============================================
# POLYBAR
# ============================================

# Launch polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id feh --bg-scale ~/Downloads/mountain-3440x1440-25897.jpg

bindsym $mod+Shift+s exec --no-startup-id scrot -s ~/Pictures/Screenshots/%Y%m%d_%H%M%S.png
